block page-vars

doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    title ВШМ - #{title}

    link(rel="preconnect", href="https://fonts.gstatic.com")
    link(
      rel="stylesheet",
      href="https://fonts.googleapis.com/css2?family=Philosopher&display=swap"
    )
    link(rel="stylesheet", href="./css/normalize.css")
    link(rel="stylesheet", href="./css/foundation.min.css")
    link(rel="stylesheet", href="./css/slick.css")
    link(rel="stylesheet", href="./css/slick-theme.css")
    //- link(rel="stylesheet", href="./css/swiper-bundle.min.css")
    //-link(rel="stylesheet", href="./css/hystmodal.min.css")
    link(rel="stylesheet", href="./css/main.min.css")

    script(src="./js/jquery-3.6.0.min.js")
    script(src="./js/foundation.min.js")
    script(src="./js/slick.min.js")
    script(src="./js/vue.min.js")
    script(src="./js/vuejs-datepicker.min.js")
    script(src="./js/vuejs-datepicker-translation-ru.min.js")

    //- script(src="./js/swiper-bundle.min.js")
    //- script(src="./js/gsap.min.js")
    //- script(src="./js/hystmodal.min.js")
    //- script(src="./js/dynamicAdapt.js")

  body
    .l-page
      include ../components/header

      main
        .l-container
          .l-page-static
            if sidebar
              include ../components/sidebar

            .l-page-wrapper
              include ../components/breadcrumbs

              .l-page-content
                .l-page-header
                  h1.l-page-title #{title}
                  if datepicker
                    include ../components/datepicker
                .l-page-content__inner
                  block page-content

      include ../components/footer

    script.
      $(document).foundation();
    
    script(src="./js/main.js")
